rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Required for role-based access
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Main App Data: Work Orders, Indents, etc.
    match /app_data/{document} {
      // Require Authentication for any access
      allow read, write: if request.auth != null;
      
      // Strict Safety: Explicitly block anyone from deleting an entire collection document.
      allow delete: if false;
    }

    // Archived Data Protection
    match /archived_data/{document} {
      allow read, write: if request.auth != null;
      allow delete: if false;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
